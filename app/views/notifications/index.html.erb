<h1>Listing notifications</h1>

<%= image_tag "notification_twitter_icon.png" %>

<%= will_paginate @notifications %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.title %></td>
        <td><%= link_to "Push", push_twitter_path(notification), {:class => "button fa fa-twitter"} %></td>
        <td><%= link_to "Push", push_facebook_path(notification), {:class => "button fa fa-facebook"} %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
