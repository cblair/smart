<!-- Main Feed -->
<!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
<div class="row main-feed no-print">
  <div class="row">
    <div class="large-13 small-13 large-offset-1 small-offset-1 columns rider-alerts-column">
      <div class="rider-alerts home-box">
        <div class="row">
           <div class="small-3 columns rider-alerts-label">
              <%= image_tag("rider-alerts-image.png", width:140)%>
           </div>
          <div class="small-11 columns scrollable rider-alerts-column">
            <div class="rider-alerts-content">
              <%= render :partial => "pages/recent_tweets" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-14 small-14 large-offset-1 small-offset-1 columns fixed-route-column">
      <div class="small-14 follow-us">
        TO RECEIVE RIDER ALERT NOTIFICATIONS, FOLLOW US ON <%= link_to fa_icon("twitter") , "https://www.twitter.com/MoveSmartMoscow", class: "social-media-twitter" %>, OR LIKE US ON <%= link_to fa_icon("facebook-square"), "https://www.facebook.com/pages/SMART-Transit/246944595460502", class: "social-media-facebook" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-14 small-14 large-offset-1 small-offset-1 columns fixed-route-column">
      <div class="fixed-route home-box">
        <div class="row">
          <div class="medium-5 columns fixed-route-label show-for-medium-up">
            <%= image_tag("fixed-route.png", width:240)%>
            <%= image_tag("fare-free.png", class: "fare-free")%>
          </div>
          <div class="small-14 medium-8 columns">
            <div class="show-for-small-only">
              <h4 class="home-box-label">MOSCOW FIXED ROUTE</h4>
            </div>
            <div class="home-box-content">
                <p class="home-box-center"><%= link_to "SCHEDULE", "http:///r2transit.com/Downloads/schedule.pdf", class: "box-link" %></p>
                <p class="home-box-center"><%= link_to "INFORMATION", page_path(Page.find_or_create_by(name: "Fixed Route")), class: "box-link" %></p>
                <p class="home-box-center"><%= link_to "CLOSURES", page_path(Page.find_or_create_by(name: "closures")), class: "box-link" %></p>
                <div class="fixed-route-logos">
                  <a class="img-link home-box-center" href="http://hb.transit.idaho.gov/main.jsf?view=rpt">
                    <%= image_tag("logos/511.png", width: 50) %>
                    </a>
                  <a class="img-link home-box-center" href="http://maps.google.com/intl/en/landing/transit/#mdy">
                    <%= image_tag("logos/google_transit.gif", width: 100) %>
                    </a>
                  <a class="img-link home-box-center" href="http://www.bing.com/maps/transitdefault.aspx">
                    <%= image_tag("logos/bing.png", width: 100) %>
                    </a>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-7 small-14 columns dial-a-ride-column">
      <div class="dial-a-ride home-box">
        <div class="row">
          <div class="medium-4 columns dial-a-ride-label show-for-medium-up">
           <%= image_tag("dial-a-ride.png", width:240)%>
          </div>
          <div class="small-14 medium-8 columns">
            <div class="show-for-small-only">
              <h4 class="home-box-label">DIAL-A-RIDE</h4>
            </div>
            <div class="home-box-content">
              <p class="dial-a-ride-center home-box-center"><%= link_to "INFORMATION", page_path(Page.find_or_create_by(name: "Dial-A-Ride")), class: "box-link" %></p>
              <p class="dial-a-ride-center home-box-center"><%= link_to "ADA PRIORITY", page_path(Page.find_or_create_by(name: "ADA Priority Paratransit")), class: "box-link" %></p>
              <p class="dial-a-ride-center home-box-center"><%= link_to "MEDICAID", page_path(Page.find_or_create_by(name: "Medicaid")), class: "box-link" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="large-7 small-14 columns home-box-column">
      <div class="inter-county home-box">
        <div class="row">
          <div class="medium-4 columns inter-county-label show-for-medium-up">
            <%= image_tag("intercity-tickets.png", width:240)%>
          </div>
          <div class="small-14 medium-8 columns">
            <div class="show-for-small-only">
              <h4 class="home-box-label">INTERCITY TICKETS</h4>
            </div>
            <div class="home-box-content">
              <ul class="small-block-grid-2">
                <p class="intercity-center"><%= link_to "INFORMATION", page_path(Page.find_or_create_by(name: "Intercity Tickets")), class: "box-link home-box-center" %></p>
              </ul>
            </div>
          </div>
        </div>       
      </div>
    </div>
  </div>
</div>

