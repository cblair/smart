<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "SMART - R2 Transit" %></title>

  	<%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <!-- Header -->
    <div class="row top-header">
      <div class="small-9 medium-9 large-9 columns top-header-text">
         REGIONAL PUBLIC TRANSPORTATION
      </div>
      <div class="small-3 medium-3 large-3 columns top-header-image">
          <%= image_tag("smart-logo.png", height:82, width:170)%>
      </div>      
    </div>
    <!-- End Header -->

    <!-- Header -->
    <div class="row">
      <div class="large-12 columns">

      </div>
    </div>
    <!-- End Headher -->

    <!-- Body -->

    <div class="row">
      <div class="medium-3 large-3 columns nav">
          <%= image_tag "home_banner/cropped/Design West_20130627_0048.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/Design West_20130627_0145.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/trans services 1.JPG", class: 'top-nav slideshow' %>
      </div>
      <div class="medium-5 large-5   columns nav top-nav">
          <%= image_tag "home_banner/full/Design West_20130627_0008.jpg", class: 'top-center-nav' %>
      </div>
      <div class="medium-3 large-3 columns nav top-nav">
          <%= image_tag "home_banner/cropped/Design West_20130627_0048.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/Design West_20130627_0145.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/trans services 1.JPG", class: 'top-nav slideshow' %>
      </div>
      <div class="medium-3 large-3 columns nav top-nav">
          <%= image_tag "home_banner/cropped/Design West_20130627_0048.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/Design West_20130627_0145.jpg", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/cropped/trans services 1.JPG", class: 'top-nav slideshow' %>
      </div>
    </div>

    <div class="row">
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-left-nav">
          <li><%= link_to "HOME", "#", class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-5 large-5 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "ABOUT", "#", class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "NEWS", "#", class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "DONATE", "#", class: 'nav' %></li>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="medium-3 large-3 columns nav">
        <ul class="side-nav main-nav">
          <li><%= link_to "DIRECTIONS", "#", class: 'nav' %></li>
          <li><%= link_to "CONTACT", "#", class: 'nav' %></li>
          <li><%= link_to "DIRECTIONS", "#", class: 'nav' %></li>
          <li><%= link_to "SERVICE", "#", class: 'nav' %></li>      
          <li><%= link_to "HOW TO TRAVEL", "#", class: 'nav' %></li>
          <li><%= link_to "EMPLOYMENT", "#", class: 'nav' %></li>
          <% if current_user %>
          <li><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete, class: 'nav small button' %></li>
          <% end %>
        </ul>
      </div>
      <div class="small-11 large-11 columns">
        <div class="row">
          <div class="small-12 follow-us">
            FOLLOW US ON:&nbsp;&nbsp;
            <%= fa_icon "facebook-square" %>
            <%= fa_icon "twitter" %>
          </div>
          <div class="small-12">
            <% alert_or_notice = flash[:notice] if flash[:notice] %>
            <% alert_or_notice = flash[:alert] if flash[:alert] %>
            <% if alert_or_notice %>
              <div data-alert class="alert-box info">
                <%= alert_or_notice %>
                <a href="#" class="close">&times;</a>
              </div>
            <% end %>

            <%= yield %>
          </div>
        </div>
      </div>
    </div>

    <!-- End Body -->
  </body>
</html>
