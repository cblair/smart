<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="en"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "SMART - R2 Transit" %></title>

  	<%= stylesheet_link_tag    "application" %>
    <style type="text/css" media="print">
      .no-print
      { display: none; }

      .main-nav {
        margin-top: 60px;
      }
    </style>
    <%= javascript_include_tag "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <!-- Header -->
    <div class="row top-header">
      <div class="small-14 medium-14 large-14 columns top-header-text" style="position:relative">
         <div class="top-header-label">
           REGIONAL PUBLIC TRANSPORTATION
         </div>
        <div class="show-for-medium-up">
           <%= 
            image_tag("smart-logo.png", height:82, width:996, style: "position: absolute; right: 0px;min-width:996px;")
            %>
         </div>         
      </div>
    </div>
    <!-- End Header -->

    <!-- Header -->
    <div class="row">
      <div class="large-12 columns">

      </div>
    </div>
    <!-- End Header -->

    <!-- Body -->

    <div class="row show-for-medium-up no-print">
      <div class="medium-3 large-3 columns nav">
          <%= image_tag "home_banner/404 for smart website (b&w).png", class: 'top-nav-large slideshow' %>
      </div>
      <div class="medium-5 large-5 columns nav top-nav">
          <%= image_tag "home_banner/Design West_20130627_0008.png", class: 'top-center-nav' %>
      </div>
      <div class="medium-3 large-3 columns nav top-nav">
          <%= image_tag "home_banner/Design West_20130627_0114 for smart website (b&w).png", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/Design West_20130627_0098 for smart website(b&w).png", class: 'top-nav slideshow' %>
          <%= image_tag "home_banner/IMG_1048 for smart website (b&w).png", class: 'top-nav slideshow' %>
      </div>
      <div class="medium-3 large-3 columns nav top-nav">
          <%= image_tag "home_banner/IMG_1071 for smart website (b&w).png", class: 'top-nav-large slideshow' %>
      </div>
    </div>

    <div class="row show-for-medium-up no-print" id="design-west-credit">
      <div class="medium-5 large-5 columns small-offset-3 medium-offset-3 large-offset-3">
          <p id="design-west-credit">Some photos provided by Design West Architects</p>
      </div>
    </div>

    <div class="row main-nav">
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-left-nav">
          <li><%= link_to "HOME", "/", class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-5 large-5 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "ABOUT", page_path(Page.find_or_create_by(name: "about")), class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "NEWS", page_path(Page.find_or_create_by(name: "news")), class: 'nav' %></li>
        </ul>
      </div>
      <div class="medium-3 large-3 columns nav">
        <ul class="button-group top-right-nav">
          <li><%= link_to "DONATE", page_path(Page.find_or_create_by(name: "donate")), class: 'nav' %></li>
        </ul>
      </div>
    </div>

    <div class="row" id="content-body">
      <div class="medium-3 large-3 columns nav side-nav">
        <ul class="side-nav main-nav">
          <li class="nav"><%= link_to "CONTACT", page_path(Page.find_or_create_by(name: "contact")), class: 'nav' %></li>
          <li class="nav"><%= link_to "DIRECTIONS", page_path(Page.find_or_create_by(name: "directions")), class: 'nav' %></li>
          <li class="nav"><%= link_to "EMPLOYMENT", page_path(Page.find_or_create_by(name: "employment")), class: 'nav' %></li>
          <li class="nav"><%= link_to "USEFUL LINKS", page_path(Page.find_or_create_by(name: "useful links")), class: 'nav' %></li>
          <% if current_user %>
          <li><%= link_to "EDIT THIS USER", edit_user_registration_path, class: 'nav button-logged-in' %></li>
          <li><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete, class: 'nav button-logged-in' %></li>
          <% end %>
        </ul>

        <div class="show-for-medium-up no-print">
          <p id="services"><strong>SERVICES MADE POSSIBLE BY THESE PARTNERS: </strong></p>
          <%= image_tag "logos/dot.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/idot.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/moscow.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/uofi.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/nsa.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/united_way.png", class: 'side-logos' %>
          <br />
          <%= image_tag "logos/generous_local_supporters.png", class: 'side-logos' %>
          <br />
        </div>
      </div>
      <div class="small-11 large-11 columns home-body">
        <div class="row">
          <div class="small-14">
            <% alert_or_notice = flash[:notice] if flash[:notice] %>
            <% alert_or_notice = flash[:alert] if flash[:alert] %>
            <% if alert_or_notice %>
              <div data-alert class="alert-box info large-offset-1 small-offset-1">
                <%= alert_or_notice %>
                <a href="#" class="close">&times;</a>
              </div>
            <% end %>

            <% if params[:controller] == "pages" && params[:action] == "home" %>
              <%= yield %>
            <% else %>
              <div class="row main-feed">
                <div class="row">
                  <div class="large-13 small-13 large-offset-1 small-offset-1 columns rider-alerts-column">
                    <%= yield %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="row" id="footer">
      <div class="small-14 medium-5 columns footer-left"><p><%= link_to "Site map", pages_path %></p></div>
      <div class="small-14 medium-4 columns footer-center"><p>Webmaster: <%= link_to "smart@smarttransit.org", "mailto:smart@smarttransit.org" %></p></div>
      <div class="small-14 medium-5 columns footer-right"><%= link_to "Get Adobe Reader", "http://get.adobe.com/reader/" %></div>
    </div>

    <!-- End Body -->
  </body>
</html>
